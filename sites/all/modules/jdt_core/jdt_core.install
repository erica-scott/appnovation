<?php
/**
 * @file
 * Install file for JDT Core
 */
 
/**
 * Enables Common Modules
 */
function jdt_core_update_7000() {
  $enabled_modules = array('views', 'features', 'strongarm', 'context', 'pathauto', 'diff', 'libraries', 'jquery_update', 'devel', 'module_filter', 'admin_menu');
  module_enable($enabled_modules);
  
  $custom_module = array('current_posts');
  module_enable($custom_module);
  
  db_update('block')
    ->fields(array(
      'region' => 'content',
      )
    )
    ->condition('module', 'system')
    ->condition('delta', 'current_posts')
    ->execute();
}